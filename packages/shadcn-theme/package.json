{
	"name": "@sjsf/shadcn-theme",
	"version": "2.0.0-next.4",
	"description": "The shadcn-svelte based theme for svelte-jsonschema-form",
	"license": "MIT",
	"keywords": [
		"theme",
		"shadcn-svelte",
		"form"
	],
	"type": "module",
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"publishConfig": {
		"provenance": true
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/x0k/svelte-jsonschema-form.git",
		"directory": "packages/shadcn-theme"
	},
	"bugs": "https://github.com/x0k/svelte-jsonschema-form/issues",
	"homepage": "https://x0k.github.io/svelte-jsonschema-form/",
	"scripts": {
		"dev": "vite dev",
		"fix-theme-resolver-type": "node --experimental-strip-types ../../scripts/fix-theme-resolver-type.ts",
		"build": "svelte-package && npm run fix-theme-resolver-type && vite build && mv $(find .svelte-kit/output/client/_app/immutable/assets/ -name \"_page*.css\" | head -n 1) dist/styles.css && sed -i 's/:root \\[data-theme=/:host \\[data-theme=/g' dist/styles.css && sed -i 's/:root{/:host{/g' dist/styles.css && publint",
		"preview": "vite preview",
		"test": "pnpm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest"
	},
	"exports": {
		"./components/*": {
			"types": "./dist/theme/components/*.d.ts",
			"svelte": "./dist/theme/components/*"
		},
		"./widgets/*": {
			"types": "./dist/theme/widgets/*.d.ts",
			"svelte": "./dist/theme/widgets/*"
		},
		"./extra-widgets/*": {
			"types": "./dist/theme/extra-widgets/*.d.ts",
			"svelte": "./dist/theme/extra-widgets/*"
		},
		".": {
			"types": "./dist/theme/index.d.ts",
			"svelte": "./dist/theme/index.js"
		},
		"./default": {
			"types": "./dist/default-ui/index.d.ts",
			"svelte": "./dist/default-ui/index.js"
		},
		"./new-york": {
			"types": "./dist/new-york-ui/index.d.ts",
			"svelte": "./dist/new-york-ui/index.js"
		},
		"./preset": {
			"types": "./dist/preset.d.ts",
			"default": "./dist/preset.js"
		},
		"./styles.css": "./dist/styles.css"
	},
	"peerDependencies": {
		"@sjsf/form": "workspace:^2.0.0-next.4",
		"@sjsf/basic-theme": "workspace:^2.0.0-next.4",
		"bits-ui": "^1.3.12",
		"clsx": "^2.1.1",
		"lucide-svelte": "^0.482.0",
		"svelte": "^5.23.0",
		"tailwind-merge": "^2.6.0",
		"tailwind-variants": "^0.3.1"
	},
	"devDependencies": {
		"@internationalized/date": "^3.7.0",
		"@playwright/test": "catalog:",
		"@sjsf/ajv8-validator": "workspace:*",
		"@sjsf/basic-theme": "workspace:*",
		"@sjsf/form": "workspace:*",
		"@sveltejs/adapter-static": "catalog:",
		"@sveltejs/kit": "catalog:",
		"@sveltejs/package": "catalog:",
		"@sveltejs/vite-plugin-svelte": "catalog:",
		"@types/eslint": "catalog:",
		"ajv": "catalog:",
		"autoprefixer": "catalog:",
		"bits-ui": "^1.3.12",
		"clsx": "^2.1.1",
		"eslint": "catalog:",
		"eslint-config-prettier": "catalog:",
		"eslint-plugin-svelte": "catalog:",
		"globals": "catalog:",
		"lucide-svelte": "^0.482.0",
		"postcss": "catalog:",
		"prettier": "catalog:",
		"prettier-plugin-svelte": "catalog:",
		"svelte": "catalog:",
		"svelte-check": "catalog:",
		"tailwind-merge": "^2.6.0",
		"tailwind-variants": "^0.3.1",
		"tailwindcss": "catalog:",
		"tailwindcss-animate": "^1.0.7",
		"testing": "workspace:*",
		"typescript-eslint": "catalog:",
		"vite": "catalog:",
		"vitest": "catalog:"
	},
	"svelte": "./dist/theme/index.js",
	"types": "./dist/theme/index.d.ts"
}