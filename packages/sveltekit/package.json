{
	"name": "@sjsf/sveltekit",
	"version": "3.0.3",
	"description": "The SvelteKit integration for svelte-jsonschema-form",
	"license": "MIT",
	"keywords": [
		"sveltekit",
		"svelte",
		"jsonschema",
		"form"
	],
	"type": "module",
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"publishConfig": {
		"provenance": true
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/x0k/svelte-jsonschema-form.git",
		"directory": "packages/sveltekit"
	},
	"bugs": "https://github.com/x0k/svelte-jsonschema-form/issues",
	"homepage": "https://x0k.github.io/svelte-jsonschema-form/",
	"scripts": {
		"dev": "vite dev",
		"build": "svelte-package && vite build && publint",
		"preview": "vite preview",
		"test": "npm run test:unit -- --run",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		},
		"./client": {
			"types": "./dist/client/index.d.ts",
			"svelte": "./dist/client/index.js"
		},
		"./server": {
			"types": "./dist/server/index.d.ts",
			"svelte": "./dist/server/index.js"
		},
		"./rf": {
			"types": "./dist/rf/index.d.ts",
			"svelte": "./dist/rf/index.js"
		},
		"./rf/client": {
			"types": "./dist/rf/client/index.d.ts",
			"svelte": "./dist/rf/client/index.js"
		},
		"./rf/server": {
			"types": "./dist/rf/server/index.d.ts",
			"svelte": "./dist/rf/server/index.js"
		}
	},
	"peerDependencies": {
		"@sjsf/form": "workspace:^3.0.3",
		"@sveltejs/kit": "^2.48.3",
		"esm-env": "^1.2.0",
		"svelte": "^5.30.0"
	},
	"devDependencies": {
		"@sjsf/ajv8-validator": "workspace:*",
		"@sjsf/basic-theme": "workspace:*",
		"@sjsf/form": "workspace:*",
		"ajv": "catalog:",
		"esm-env": "catalog:",
		"globals": "catalog:",
		"svelte": "catalog:",
		"theme-testing": "workspace:*"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"dependencies": {
		"@standard-schema/spec": "^1.0.0"
	}
}