{
  "name": "@sjsf/basic-theme",
  "version": "2.0.0-next.4",
  "description": "Basic theme for svelte-jsonschema-form",
  "license": "MIT",
  "keywords": [
    "svelte",
    "jsonschema",
    "theme"
  ],
  "type": "module",
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "publishConfig": {
    "provenance": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/x0k/svelte-jsonschema-form.git",
    "directory": "packages/basic-theme"
  },
  "bugs": "https://github.com/x0k/svelte-jsonschema-form/issues",
  "homepage": "https://x0k.github.io/svelte-jsonschema-form/",
  "scripts": {
    "dev": "vite",
    "test:disabled": "vitest run --exclude '.svelte-kit/**'",
    "build": "svelte-package && publint",
    "check": "svelte-check --tsconfig ./tsconfig.json"
  },
  "peerDependencies": {
    "svelte": "^5.23.0",
    "@sjsf/form": "workspace:^2.0.0-next.4"
  },
  "devDependencies": {
    "@sjsf/form": "workspace:*",
    "@sveltejs/package": "catalog:",
    "@sveltejs/vite-plugin-svelte": "catalog:",
    "@tsconfig/svelte": "catalog:",
    "svelte": "catalog:",
    "svelte-check": "catalog:",
    "testing": "workspace:*",
    "vite": "catalog:",
    "vitest": "catalog:"
  },
  "types": "./dist/index.d.ts",
  "svelte": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    },
    "./components/*": {
      "types": "./dist/components/*.d.ts",
      "svelte": "./dist/components/*"
    },
    "./widgets/*": {
      "types": "./dist/widgets/*.d.ts",
      "svelte": "./dist/widgets/*"
    },
    "./extra-widgets/*": {
      "types": "./dist/extra-widgets/*.d.ts",
      "svelte": "./dist/extra-widgets/*"
    }
  }
}