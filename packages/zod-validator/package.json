{
  "name": "@sjsf/zod-validator",
  "version": "2.0.0-next.0",
  "description": "The zod based validator for svelte-jsonschema-form",
  "license": "MIT",
  "keywords": [
    "validator",
    "jsonschema",
    "zod"
  ],
  "type": "module",
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "publishConfig": {
    "provenance": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/x0k/svelte-jsonschema-form.git",
    "directory": "packages/zod-validator"
  },
  "bugs": "https://github.com/x0k/svelte-jsonschema-form/issues",
  "homepage": "https://x0k.github.io/svelte-jsonschema-form/",
  "scripts": {
    "build": "tsc && publint",
    "dev": "tsc --watch"
  },
  "types": "dist/index.d.ts",
  "main": "dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    }
  },
  "peerDependencies": {
    "@sjsf/form": "workspace:^2.0.0-next.0",
    "zod": "^3.24.2",
    "json-schema-to-zod": "^2.6.0"
  },
  "devDependencies": {
    "@sjsf/form": "workspace:*",
    "zod": "catalog:",
    "json-schema-to-zod": "^2.6.0"
  }
}