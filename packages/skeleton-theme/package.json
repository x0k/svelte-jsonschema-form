{
	"name": "@sjsf/skeleton-theme",
	"version": "2.0.0-next.8",
	"description": "The skeleton based theme for svelte-jsonschema-form",
	"license": "MIT",
	"keywords": [
		"theme",
		"skeleton",
		"form"
	],
	"type": "module",
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"publishConfig": {
		"provenance": true
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/x0k/svelte-jsonschema-form.git",
		"directory": "packages/skeleton-theme"
	},
	"bugs": "https://github.com/x0k/svelte-jsonschema-form/issues",
	"homepage": "https://x0k.github.io/svelte-jsonschema-form/",
	"scripts": {
		"dev": "vite dev",
		"build": "svelte-package && vite build && mv $(find .svelte-kit/output/client/_app/immutable/assets/ -name \"_page*.css\" | head -n 1) dist/styles.css && sed -i 's/:root \\[data-theme=/:host \\[data-theme=/g' dist/styles.css && publint",
		"preview": "vite preview",
		"test": "pnpm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest"
	},
	"exports": {
		"./components/*": {
			"types": "./dist/components/*.d.ts",
			"svelte": "./dist/components/*"
		},
		"./widgets/*": {
			"types": "./dist/widgets/*.d.ts",
			"svelte": "./dist/widgets/*"
		},
		"./extra-widgets/*": {
			"types": "./dist/extra-widgets/*.d.ts",
			"svelte": "./dist/extra-widgets/*"
		},
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		},
		"./preset": {
			"types": "./dist/preset.d.ts",
			"default": "./dist/preset.js"
		},
		"./styles.css": "./dist/styles.css",
		"./specs": {
			"types": "./dist/specs.d.ts",
			"svelte": "./dist/specs.js"
		}
	},
	"peerDependencies": {
		"@sjsf/form": "workspace:^2.0.0-next.8",
		"@sjsf/basic-theme": "workspace:^2.0.0-next.8",
		"@skeletonlabs/skeleton": ">=3.0.0-next.0 <=3.0.0-next.10",
		"@tailwindcss/forms": "^0.5.0",
		"svelte": "^5.25.0"
	},
	"devDependencies": {
		"@playwright/test": "catalog:",
		"@sjsf/ajv8-validator": "workspace:*",
		"@sjsf/basic-theme": "workspace:*",
		"@sjsf/form": "workspace:*",
		"@skeletonlabs/skeleton": "3.0.0-next.10",
		"@sveltejs/adapter-static": "catalog:",
		"@sveltejs/kit": "catalog:",
		"@sveltejs/package": "catalog:",
		"@sveltejs/vite-plugin-svelte": "catalog:",
		"@tailwindcss/forms": "^0.5.10",
		"@types/eslint": "catalog:",
		"ajv": "catalog:",
		"autoprefixer": "catalog:",
		"eslint": "catalog:",
		"eslint-config-prettier": "catalog:",
		"eslint-plugin-svelte": "catalog:",
		"globals": "catalog:",
		"postcss": "catalog:",
		"prettier": "catalog:",
		"prettier-plugin-svelte": "catalog:",
		"svelte": "catalog:",
		"svelte-check": "catalog:",
		"tailwindcss": "catalog:",
		"testing": "workspace:*",
		"typescript-eslint": "catalog:",
		"vite": "catalog:",
		"vitest": "catalog:"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts"
}