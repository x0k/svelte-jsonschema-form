{
  "extends": "@total-typescript/tsconfig/bundler/dom/library-monorepo",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": [
      "ES2024",
      "ESNext.Disposable",
      "ESNext.Collection",
      "ESNext.Iterator",
      "DOM",
    ],
    "rootDir": "src",
    "types": [
      "vite/client",
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.svelte",
  ],
}