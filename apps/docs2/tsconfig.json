{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "#/*": [
        "../../packages/*"
      ],
      "%/*": [
        "../../examples/*"
      ],
      "lab/*": [
        "../../lab/*"
      ],
      "legacy/*": [
        "../../legacy/*"
      ],
      "apps/*": [
        "../*"
      ]
    }
  },
  "include": [
    ".astro/types.d.ts",
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.svelte",
    "**/*"
  ],
  "exclude": [
    "dist",
    "**/*.api.*",
    "**/validate-functions.js"
  ]
}