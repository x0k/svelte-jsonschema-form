---
import { getRelativeLocaleUrl } from "astro:i18n";
import { Code, Tabs, TabItem, LinkCard } from "@astrojs/starlight/components";

import {
  createThemeInstall,
  THEME_BRAND,
  THEME_TITLES,
  ACTUAL_THEMES,
  LAB_THEMES,
  ACTUAL_AND_LAB_THEMES,
  type ActualTheme,
  type LabTheme,
} from "@/shared";
import { DEFAULT_LOCALE } from "@/i18n";
import Npm from "@/components/npm.astro";
import FormCard from "@/components/form-card.astro";

import Form from "./form.svelte";

import schemaCode from "./data?raw";
import withBasicCode from "./basic/form.svelte?raw";
import withSkeleton4Code from "./skeleton4/form.svelte?raw";
import withDaisyui5Code from "./daisyui/form.svelte?raw";
import withFlowbite3Code from "./flowbite/form.svelte?raw";
import withShadcn4Code from "./shadcn4/form.svelte?raw";

import basicDefaultsCode from "./basic/defaults.ts?raw";
import skeleton4DefaultsCode from "./skeleton4/defaults.ts?raw";
import daisyui5DefaultsCode from "./daisyui/defaults.ts?raw";
import flowbite3DefaultsCode from "./flowbite/defaults.ts?raw";
import shadcn4DefaultsCode from "./shadcn4/defaults.ts?raw";

import basicStyles from "@sjsf/basic-theme/css/basic.css?raw";
import daisyu5Styles from "@sjsf/daisyui5-theme/styles.css?raw";
import flowbiteStyles from "@sjsf/flowbite3-theme/styles.css?raw";
import skeleton4Styles from "@sjsf/skeleton4-theme/styles.css?raw";
import shadcn4Styles from "@sjsf/shadcn4-theme/styles.css?raw";

const CODE = {
  basic: withBasicCode,
  daisyui5: withDaisyui5Code,
  flowbite3: withFlowbite3Code,
  skeleton4: withSkeleton4Code,
  shadcn4: withShadcn4Code,
} satisfies Record<ActualTheme, string>;

const DEFAULTS = {
  basic: basicDefaultsCode,
  daisyui5: daisyui5DefaultsCode,
  flowbite3: flowbite3DefaultsCode,
  skeleton4: skeleton4DefaultsCode,
  shadcn4: shadcn4DefaultsCode,
} satisfies Record<ActualTheme, string>;

const STYLES = {
  basic: basicStyles,
  daisyui5: daisyu5Styles,
  flowbite3: flowbiteStyles,
  skeleton4: skeleton4Styles,
  shadcn4: shadcn4Styles,
} satisfies Record<ActualTheme, string>;

const locale = Astro.currentLocale ?? DEFAULT_LOCALE;
const initialTheme = (Astro.params.theme ?? "basic") as ActualTheme | LabTheme;

const styles = ACTUAL_AND_LAB_THEMES.map(
  (theme) => `
  .theme-tabs:has(.theme-tab[data-theme="${theme}"]:checked) ~ .theme-content[data-theme="${theme}"] {
    display: block;
    height: 100%
  }
`
).join("\n");
---

<div class="theme-tabs">
  {
    ACTUAL_THEMES.map((theme) => (
      <input
        type="radio"
        name="theme-input"
        class="theme-tab"
        aria-label={THEME_TITLES[theme]}
        checked={theme === initialTheme}
        data-theme={theme}
      />
    ))
  }
</div>
<div class="theme-tabs">
  {
    LAB_THEMES.map((theme) => (
      <input
        type="radio"
        name="theme-input"
        class="theme-tab with-icon"
        aria-label={THEME_TITLES[theme]}
        checked={theme === initialTheme}
        data-theme={theme}
      />
    ))
  }
</div>
{
  ACTUAL_THEMES.map((theme) => (
    <div class="theme-content" data-theme={theme}>
      {THEME_BRAND[theme] && (
        <p>
          This theme is not affiliated with, endorsed by, or sponsored by
          {/* Prevents incorrect formatting */}"{THEME_BRAND[theme]}" brand.
        </p>
      )}
      <Npm pkg={createThemeInstall(theme)} />

      <LinkCard
        title={`${THEME_TITLES[theme]} theme setup`}
        href={getRelativeLocaleUrl(locale, `/themes/${theme}/`)}
      />

      <h2 id="usage">Usage</h2>

      <Tabs>
        <TabItem label="form.svelte">
          <Code code={CODE[theme]} lang="svelte" />
        </TabItem>
        <TabItem label="data.ts">
          <Code code={schemaCode} lang="typescript" />
        </TabItem>
        <TabItem label="defaults.ts">
          <Code code={DEFAULTS[theme]} lang="typescript" />
        </TabItem>
      </Tabs>

      <FormCard style={STYLES[theme]}>
        <Form theme={theme} client:only="svelte" />
      </FormCard>
    </div>
  ))
}

<style>
  .theme-tabs {
    z-index: 10;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.5rem;
    position: sticky;
    top: calc(64px + 1rem);
  }
  .theme-tab {
    position: relative;
    gap: 0.5rem;
    min-width: fit-content;
    appearance: none;
    cursor: pointer;
    text-align: center;
    user-select: none;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    display: inline-flex;
    padding-inline: 1.25rem;
    padding-block: 0.15rem;
    border: 1px solid var(--sl-color-gray-5);
    border-radius: 2rem;
    background-color: var(--sl-color-bg);
    box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px;
    /* box-shadow: var(--sl-shadow-md); */
    &.with-icon {
      padding-right: 1rem;
    }

    &.with-icon::after {
      content: "";
      width: 1rem;
      height: 1rem;
      background-color: currentColor;

      mask: url("lab.svg") no-repeat center;
      mask-size: contain;
    }
    &:before {
      content: attr(aria-label);
    }
    &:checked {
      background-color: var(--sl-color-gray-5);
      border-color: var(--sl-color-text-accent);
    }
  }
  .theme-content {
    display: none;
    width: 100%;
    order: 1;
    margin-top: 1rem;
    &:nth-child(2) > :global(:nth-child(2)) {
      margin-top: 0;
    }
  }
</style>

<style set:html={styles}></style>
