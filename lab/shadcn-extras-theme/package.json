{
	"name": "@sjsf-lab/shadcn-extras-theme",
	"version": "3.0.0-next.12",
	"description": "The shadcn-svelte-extras based theme for svelte-jsonschema-form",
	"license": "MIT",
	"scripts": {
		"dev": "vite dev",
		"build": "svelte-package && vite build && mv $(find .svelte-kit/output/server/_app/immutable/assets/ -name \"_page*.css\" | head -n 1) dist/styles.css && publint",
		"preview": "vite preview",
		"test": "npm run test:unit -- --run",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"publishConfig": {
		"provenance": true
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/x0k/svelte-jsonschema-form.git",
		"directory": "lab/shadcn-extras-theme"
	},
	"bugs": "https://github.com/x0k/svelte-jsonschema-form/issues",
	"homepage": "https://x0k.github.io/svelte-jsonschema-form/",
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		"./extra-widgets/*": {
			"types": "./dist/theme/extra-widgets/*.d.ts",
			"svelte": "./dist/theme/extra-widgets/*"
		},
		".": {
			"types": "./dist/theme/index.d.ts",
			"svelte": "./dist/theme/index.js"
		},
		"./ui": {
			"types": "./dist/components/ui/index.d.ts",
			"svelte": "./dist/components/ui/index.js"
		},
		"./styles.css": "./dist/styles.css",
		"./specs": {
			"types": "./dist/specs.d.ts",
			"svelte": "./dist/specs.js"
		}
	},
	"peerDependencies": {
		"@lucide/svelte": "^0.544.0",
		"@sjsf/form": "workspace:^3.0.0-next.12",
		"@sjsf/shadcn4-theme": "workspace:^3.0.0-next.12",
		"bits-ui": "^2.14.0",
		"clsx": "^2.1.0",
		"svelte": "^5.43.0",
		"tailwind-merge": "^3.3.0",
		"yeezy-dates": "^1.0.1"
	},
	"peerDependenciesMeta": {
		"yeezy-dates": {
			"optional": true
		},
		"@lucide/svelte": {
			"optional": true
		}
	},
	"devDependencies": {
		"@lucide/svelte": "^0.544.0",
		"@sjsf/ajv8-validator": "workspace:*",
		"@sjsf/form": "workspace:*",
		"@sjsf/shadcn4-theme": "workspace:*",
		"@tailwindcss/vite": "catalog:",
		"ajv": "catalog:",
		"bits-ui": "^2.14.1",
		"clsx": "^2.1.1",
		"globals": "catalog:",
		"svelte": "catalog:",
		"tailwind-merge": "^3.3.1",
		"tailwindcss": "catalog:",
		"theme-testing": "workspace:*",
		"tw-animate-css": "^1.4.0",
		"yeezy-dates": "^1.0.1"
	},
	"keywords": [
		"theme",
		"shadcn-svelte",
		"shadcn-svelte-extras",
		"form"
	]
}