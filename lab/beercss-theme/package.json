{
	"name": "@sjsf-lab/beercss-theme",
	"version": "3.2.1",
	"description": "The Beer CSS v3 based theme for svelte-jsonschema-form",
	"license": "MIT",
	"keywords": [
		"theme",
		"beercss",
		"form"
	],
	"type": "module",
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"publishConfig": {
		"provenance": true
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/x0k/svelte-jsonschema-form.git",
		"directory": "lab/beercss-theme"
	},
	"bugs": "https://github.com/x0k/svelte-jsonschema-form/issues",
	"homepage": "https://x0k.github.io/svelte-jsonschema-form/",
	"scripts": {
		"dev": "vite dev",
		"build": "svelte-package && publint",
		"preview": "vite preview",
		"test": "npm run test:unit -- --run",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest"
	},
	"exports": {
		"./components/*": {
			"types": "./dist/components/*.d.ts",
			"svelte": "./dist/components/*"
		},
		"./widgets/*": {
			"types": "./dist/widgets/*.d.ts",
			"svelte": "./dist/widgets/*"
		},
		"./extra-widgets/*": {
			"types": "./dist/extra-widgets/*.d.ts",
			"svelte": "./dist/extra-widgets/*"
		},
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		},
		"./specs": {
			"types": "./dist/specs.d.ts",
			"svelte": "./dist/specs.js"
		}
	},
	"dependencies": {
		"@sjsf/basic-theme": "workspace:^3.2.1"
	},
	"peerDependencies": {
		"@sjsf/form": "workspace:^3.2.1",
		"beercss": "^3.13.0 || ^4.0.0",
		"svelte": "^5.34.8"
	},
	"devDependencies": {
		"@sjsf/ajv8-validator": "workspace:*",
		"@sjsf/form": "workspace:*",
		"@tailwindcss/vite": "catalog:",
		"ajv": "catalog:",
		"beercss": "^4.0.7",
		"globals": "catalog:",
		"svelte": "catalog:",
		"theme-testing": "workspace:*"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts"
}
