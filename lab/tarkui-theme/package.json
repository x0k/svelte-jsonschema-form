{
	"name": "@sjsf-lab/tarkui-theme",
	"version": "3.0.0",
	"description": "The Tark UI based theme for svelte-jsonschema-form",
	"license": "MIT",
	"keywords": [
		"theme",
		"Tark UI",
		"form"
	],
	"type": "module",
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"publishConfig": {
		"provenance": true
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/x0k/svelte-jsonschema-form.git",
		"directory": "lab/tarkui-theme"
	},
	"bugs": "https://github.com/x0k/svelte-jsonschema-form/issues",
	"homepage": "https://x0k.github.io/svelte-jsonschema-form/",
	"scripts": {
		"dev": "vite dev",
		"build": "svelte-package && vite build && mv $(find .svelte-kit/output/server/_app/immutable/assets/ -name \"_page*.css\" | head -n 1) dist/styles.css && publint",
		"preview": "vite preview",
		"test": "npm run test:unit -- --run",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest"
	},
	"exports": {
		"./components/*": {
			"types": "./dist/components/*.d.ts",
			"svelte": "./dist/components/*"
		},
		"./widgets/*": {
			"types": "./dist/widgets/*.d.ts",
			"svelte": "./dist/widgets/*"
		},
		"./extra-widgets/*": {
			"types": "./dist/extra-widgets/*.d.ts",
			"svelte": "./dist/extra-widgets/*"
		},
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		},
		"./styles.css": "./dist/styles.css",
		"./specs": {
			"types": "./dist/specs.d.ts",
			"svelte": "./dist/specs.js"
		}
	},
	"dependencies": {
		"@sjsf/basic-theme": "workspace:^3.2.0",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"lucide-react": "^0.562.0",
		"lucide-svelte": "^0.562.0",
		"tailwind-merge": "^3.4.0"
	},
	"peerDependencies": {
		"@ark-ui/svelte": "^5.15.0",
		"@sjsf/form": "workspace:^3.2.0",
		"svelte": "^5.34.8"
	},
	"devDependencies": {
		"@ark-ui/svelte": "^5.15.0",
		"@lucide/svelte": "^0.562.0",
		"@sjsf/ajv8-validator": "workspace:*",
		"@sjsf/form": "workspace:*",
		"@tailwindcss/vite": "catalog:",
		"ajv": "catalog:",
		"globals": "catalog:",
		"svelte": "catalog:",
		"tailwindcss": "catalog:",
		"theme-testing": "workspace:*"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts"
}